setting BOOST_ROOT
{
    help = "Path to the Boost installation";
    default = '$(BOOST)';
}

template Boost
{
    if ($(toolset) == gnu)
    {
        includedirs += $(BOOST_ROOT)/include;
        libdirs += $(BOOST_ROOT)/lib;
    }

    if ($(toolset) != gnu)
    {
        includedirs += $(BOOST_ROOT);
        libdirs += $(BOOST_ROOT)/stage/lib;
    }
}
