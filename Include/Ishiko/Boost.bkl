setting BOOST_ROOT
{
    help = "Path to the Boost installation";
    default = '$(BOOST)';
}

template Boost
{
    includedirs += $(BOOST_ROOT);

    if ($(toolset) == gnu)
    {
        libdirs += $(BOOST_ROOT)/stage/lib;
        libs += boost_system;
        libs += boost_filesystem;
    }

    if ($(toolset) != gnu)
    {
        libdirs += $(BOOST_ROOT)/stage/lib/$(arch);
    }
}
