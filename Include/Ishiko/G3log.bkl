setting G3LOG_ROOT
{
    help = "Path to the G3log installation";
    default = '$(G3LOG)';
}

template G3log
{
    if ($(toolset) == gnu)
    {
        includedirs += $(G3LOG_ROOT)/src;
        includedirs += $(G3LOG_ROOT)/include;
        libdirs += $(G3LOG_ROOT)/build/Debug;
    }

    if ($(toolset) != gnu)
    {
        includedirs += $(G3LOG_ROOT)/src;
        includedirs += $(G3LOG_ROOT)/build/include;
        libdirs += $(G3LOG_ROOT)/build/Debug;
    }

    libs += g3logger;
}
