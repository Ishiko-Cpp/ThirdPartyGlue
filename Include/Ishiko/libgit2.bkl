setting LIBGIT2_ROOT
{
    help = "Path to the libgit2 installation";
    default = '$(LIBGIT2)';
}

template libgit2
{
    includedirs += $(LIBGIT2_ROOT)/include;

    if ($(toolset) == gnu)
    {
        libdirs += $(LIBGIT2_ROOT);
    }

    if ($(toolset) != gnu)
    {
        libdirs += $(LIBGIT2_ROOT)/$(arch);
    }

    libs += git2;
}
