import OpenSSL.bkl;

setting CNATS_ROOT
{
    help = "Path to the CNATS installation";
    default = '$(CNATS)';
}

template NATS : OpenSSL
{
    if ($(toolset) == gnu)
    {
        includedirs += $(CNATS_ROOT)/include;
        libdirs += $(CNATS_ROOT)/lib;
    }

    if ($(toolset) != gnu)
    {
        includedirs += $(CNATS_ROOT)/src;
        libdirs += $(CNATS_ROOT)/lib/$(arch);
    }
}
